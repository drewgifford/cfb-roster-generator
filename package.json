{
	"name": "cfb-roster-creator",
	"version": "0.0.1",
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@faker-js/faker": "^10.1.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^24",
		"@types/sql.js": "^1.4.9",
		"@vitest/browser-playwright": "^4.0.15",
		"daisyui": "^5.5.13",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"playwright": "^1.57.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"vite": "^7.2.6",
		"vitest": "^4.0.15",
		"vitest-browser-svelte": "^2.0.1",
		"web-ext": "^9.2.0"
	},
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "eslint . --fix",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"deploy": "gh-pages -d build -t",
		"generate:db": "bun etc/scripts/make-sqlite-db.ts",
		"build:chrome": "cp extension/manifest.chrome.json extension/manifest.json && web-ext build --source-dir extension --artifacts-dir dist/chrome --overwrite-dest && rm extension/manifest.json",
		"build:firefox": "cp extension/manifest.firefox.json extension/manifest.json && web-ext build --source-dir extension --artifacts-dir dist/firefox --overwrite-dest && rm extension/manifest.json",
    "build:extension": "npm run build:chrome && npm run build:firefox"
  },
	"type": "module",
	"dependencies": {
		"@2toad/profanity": "^3.2.0",
		"fast-csv": "^5.0.5",
		"gh-pages": "^6.3.0",
		"zod": "^4.2.1"
	}
}
